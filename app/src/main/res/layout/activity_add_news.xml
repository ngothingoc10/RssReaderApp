
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ycce.rssreader.AddNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">


        <TextView
            android:layout_marginTop = "25dp"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:text="Tên loại báo:       "
            android:textSize="20dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_marginTop = "25dp"
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Nhập tên loại báo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:text="Chú thích thêm:"
            android:textSize="20dp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/feed_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:hint="Nhập chú thích " />
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="addNews"
        android:textColor="#000000"
        android:text="Thêm loại báo"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:srcCompat="@mipmap/anhbao" />

</LinearLayout>
